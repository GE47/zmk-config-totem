#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define FROG 0
#define SYM  1
#define NUM  2
#define EXT  3

/ {
    combos {
        compatible = "zmk,combos";

        combo_esc {
            timeout-ms = <50>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
        };

        escaperw {
            bindings = <&kp ESCAPE>;
            key-positions = <1 3>;
        };
    };
/ {
    keymap {
        compatible = "zmk,keymap";

        /* =========================
         * BASE â€” FROG
         * ========================= */
        frog_layer {
            label = "FROG";
            bindings = <
                /* row 1 */
                &kp ESC     &kp F     &kp D     &kp N     &kp I
                /* row 2 */
                &kp BSPC    &kp S     &kp T     &kp H     &kp E
                /* row 3 */
                &kp LSFT    &kp C     &kp W     &kp R     &kp A
                /* thumbs */
                            &mo NUM  &kp SPACE  &mo SYM
            >;
        };

        /* =========================
         * SYMBOLS
         * ========================= */
        sym_layer {
            label = "SYM";
            bindings = <
                &kp TAB     &kp LBKT   &kp LCURLY &kp LPAR   &kp AT
                &kp BSLH    &kp COLON  &kp SEMI   &kp QMARK &kp EXCL
                &kp TILDE   &kp RBKT   &kp RCURLY &kp RPAR  &kp AMPS
                            &none     &none      &none
            >;
        };

        /* =========================
         * NUMBERS
         * ========================= */
        num_layer {
            label = "NUM";
            bindings = <
                &kp EQUAL   &kp N6     &kp N7    &kp N8    &kp N9
                &kp PLUS    &kp N1     &kp N2    &kp N3    &kp N4
                &kp MINUS   &kp HASH   &kp DLLR  &kp PRCNT &kp N0
                            &none     &kp LGUI  &kp LGUI
            >;
        };

        /* =========================
         * EXT / NAV / EDIT
         * ========================= */
        ext_layer {
            label = "EXT";
            bindings = <
                &none       &kp HOME   &kp UP    &kp END   &kp PG_UP
                &none       &kp LEFT   &kp DOWN  &kp RIGHT &kp PG_DN
                &none       &kp LC(Z)  &kp LC(X) &kp LC(C) &kp LC(V)
                            &kp LSFT  &kp LCTRL &kp BSPC
            >;
        };
    };
};

};
